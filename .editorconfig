# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,py,scss,css}]
indent_style = space
indent_size = 4

[{package.json, .eslintrc}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
